#wrapper {font-size:62.5%;background:#fff;font-family:Georgia,"Times New Roman",serif;}
#wrapper img{margin-top:100px;vertical-align:middle;}
#wrapper,#header div{margin:0 auto;text-align:center;width:960px;margin-top:20px;}
#banner{margin:0 0 0px 12px;background:#fffbcc;border:1px solid #e6db55;min-height:86px;padding-top:13px;}
#banner_text a{color:#21759B;border-bottom:1px solid #DFDFDF;text-decoration:none;font-size:14px;font-style:italic;line-height:1em;text-align:center;}
#banner h1{font-weight:normal;font-size:24px;color:#444444;text-align:center; margin-top: 10px;}
#banner_text{width:61%;float:left;}
#banner_text em{font-style:italic;color:#555;}
#banner_text sup{font-size:13px;}
#banner_text #more_info{font-size:16px;color:#999;}
#rules{margin:0 auto; margin:0px 0 0px 12px;background:#fff3f5;min-height:86px; border-left: 1px solid #ffc1c7; border-bottom: 1px solid #ffc1c7; border-right: 1px solid #ffc1c7;padding-top:13px; padding-left: 20px; color: #999; text-align: left;}
#rules h2{font-weight:normal;font-size:18px;color:#444444;text-align:left; margin-top: 10px; padding-bottom: 3px;width: 275px; margin-bottom: 0px;}
#rules ul { margin-top: 5px; }
#rules ul {font-size: 14px; line-height: 1.4em; width: 650px;}
#rules ul li {margin-bottom: 4px;}
#message{margin:0 auto;text-align:center;margin-top:10px;font-family:Verdana;font-size:11.23px;color:black;}
#message a{color:#4183C4;text-decoration:none;}
#play_now_button{margin-top:8px;width:226px;height:63px;float:left;font-size:24px;text-align:center;}
#play_now_button a{display:block;color:#fff;width:226px;height:63px;line-height:60px;background:url(<%= asset_path 'signupbackground.gif' %>) center top no-repeat;text-shadow:#1e6c8f 2px 2px 0px;letter-spacing:-1px;}
#play_now_button a:hover{text-decoration:underline;background:url(<%= asset_path 'signupbackground.gif' %>) center bottom no-repeat;text-shadow:#b8441c 2px 2px 0px;}
#banner h2{margin-top:2px;}
#banner h4{margin-left:0;font-size:14px;line-height:1em;font-weight:bold;font-style:italic;text-align:center;}

#create_match_form input[type="text"] {
	font-size: 20px;
	padding: 5px;
}

#chat {
    width: 500px;
}

input#game_url {
	margin: 5px 0px 0px 10px;
	font-size: 14px;
	width: 400px;
	text-align: center;
}

#score {
    width: 500px;
    position: absolute;
    top: 100px;
    left: 550px;
}

#score_card_name {
    position: relative;
    top: 80px;
    font-size: 10px;
}

#stats {
    position: absolute;
    top: 20px;
    left: 550px;
    font-size: 78px;
    font-family: Palatino, sans-serif;
    color: #AAA;
    display: none;
}

#stats span {
    font-weight: bold;
}

#stats #good_guys {
    color: #0066AA;
}

#stats #bad_guys {
    color: #AAA;
}

#stats em {
    font-style: normal;
    font-size: 32px;
    color: #DDD;
}

#stats #left {
    font-size: 54px;
    color: #AAA;
}

ul#kibbitz li {
    list-style: none;
    border-bottom: 1px dotted #ccc;
    padding: 10px;
}

ul#kibbitz li em {
    color: #aaa;
    font-style: normal;
}

ul#kibbitz li span {
    font-style: italic;
}

#console {
    margin-left: 40px;
    display: inline;
}

#console input {
    font-family: 'Courier New';
    display: inline;
    width: 400px;
    margin: 0;
    padding: 10px;
    font-size: 15.1px;
    height: 50px;
    font-weight: bold;
    border-width: 0;
    outline-width: 0;
    clear: both;
}

#board {
    position: absolute;
    top: 350px;
    left: 200px;
}

#trump {
    font-size: 68px;
    position: relative;
    left: -80px;
    top: 30px;
}